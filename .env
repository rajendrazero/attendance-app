# ========================================================
# ===============  APPLICATION CONFIG  ====================
# ========================================================
NODE_ENV=development
PORT=3000
APP_NAME=AttendanceApp
APP_URL=http://localhost:3000

# ========================================================
# ===============  DATABASE CONFIG  =======================
# ========================================================
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=absensi_db
DB_USER=root
DB_PASS=

# Connection Pooling (opsional tapi sangat direkomendasikan)
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_POOL_IDLE=10000
DB_POOL_ACQUIRE=30000

# ========================================================
# ===============  JWT / AUTH CONFIG  =====================
# ========================================================
JWT_SECRET=super-strong-secret-key-here
REFRESH_TOKEN_SECRET=super-strong-refresh-key-here

ACCESS_TOKEN_EXPIRES=1h
REFRESH_TOKEN_EXPIRES_DAYS=30

# token versioning (anti token reuse)
TOKEN_VERSION_INITIAL=1

# ========================================================
# ===============  FILE UPLOAD CONFIG  ====================
# ========================================================
UPLOAD_DIR=./uploads/bukti
AUTO_EXPORT_SEMESTER_DIR=./uploads/semester

# Max file size (multer)
MAX_UPLOAD_MB=10

# ========================================================
# ===============  SCHEDULER / CRON CONFIG  ===============
# ========================================================
SCHEDULER_CRON_DAILY=0 5 * * *
AUTO_VALIDATE_AFTER_DAYS=3

REMINDER_ALPHA_THRESHOLD=5
REMINDER_PERIOD_DAYS=30

SYSTEM_USER_ID=1

# Semester auto export / cleanup
AUTO_EXPORT_SEMESTER=true
AUTO_PURGE_SEMESTER_MONTHS=6

# ========================================================
# ====================   SMTP EMAIL   =====================
# ========================================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=foo@example.com
SMTP_PASS=secret
SMTP_FROM="Sekolah <noreply@example.com>"

# ========================================================
# =====================  SWAGGER API  =====================
# ========================================================
ENABLE_SWAGGER=true
SWAGGER_TITLE=Attendance Management API
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION="API Absensi Sekolah dengan RBAC & Semester"

# ========================================================
# ======================   LOGGING    =====================
# ========================================================
LOG_LEVEL=info
LOG_DIR=./logs
LOG_ROTATION=true

# ========================================================
# ====================  SESSION CONFIG  ===================
# ========================================================
SESSION_SECRET=session-very-secret
SESSION_EXPIRES_HOURS=24

# ========================================================
# =====================  CORS CONFIG   ====================
# ========================================================
CORS_ORIGIN=*
CORS_ALLOW_CREDENTIALS=false